<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorText"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:drawableEnd="@drawable/vector_drawable_edit"
            android:gravity="center"
            android:padding="16dp"
            android:text="基本信息详情"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <include layout="@layout/horizontal_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业类型" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="储配站"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="企业名称" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="XXXX储配站"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查日期" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="2019-10-12"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查人员" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_remark_title"
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查综合意见" />

            <include layout="@layout/horizontal_divider" />

            <TextView
                android:id="@+id/info_remark"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGray"
                android:padding="8dp"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <TextView
            android:id="@+id/info_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/info_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.CardView>