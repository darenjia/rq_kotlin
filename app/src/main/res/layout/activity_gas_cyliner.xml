<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/with_bg_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView style="@style/MainCardPagerStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="通过卡片ID查询"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_14" />


                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/company_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:ms_background_color="@color/colorText"
                    app:ms_padding_bottom="4dp"
                    app:ms_padding_left="8dp"
                    app:ms_padding_right="4dp"
                    app:ms_padding_top="4dp"
                    android:hint="请选择气瓶产权单位"
                    app:ms_popup_padding_bottom="4dp"
                    app:ms_popup_padding_left="4dp"
                    app:ms_popup_padding_right="4dp"
                    app:ms_popup_padding_top="4dp"
                    app:ms_text_color="@color/colorAccent" />
                <include layout="@layout/horizontal_divider" />

                <EditText
                    android:id="@+id/nfc_id"
                    style="@style/RecordFragmentInfoEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:hint="请输入卡片ID"
                    android:imeActionId="6"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxEms="16"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/nfc_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/color_type_0"
                    android:text="查询"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/MainCardPagerStyle"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="new.json"
                app:lottie_loop="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请靠近NFC卡片"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/appbar_font_size" />
            <TextView
                android:id="@+id/nfc_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorAccident"
                android:textSize="@dimen/sp_14" />
        </android.support.v7.widget.CardView>

        <!--            app:lottie_rawRes="@raw/hello_world"-->
    </LinearLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>