<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:gravity="center"
            android:padding="16dp"
            android:text="事件信息"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <include layout="@layout/horizontal_divider" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分派时间" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="不合格"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件类型" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_accident_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="不合格"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处置要求" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="不合格"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="客户名称" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="XXXX储配站"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户地址" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="2019-10-12"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:gravity="center"
            android:padding="16dp"
            android:text="退单理由"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <include layout="@layout/horizontal_divider" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorText">

            <EditText
                android:id="@+id/record_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/colorGray"
                android:gravity="start"
                android:hint="请填写退单理由"
                android:padding="4dp"
                android:textColor="@color/colorSecondDrayText" />
        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>