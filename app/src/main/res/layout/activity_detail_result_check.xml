<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/top_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/colorText"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGray"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="48dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorText"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="基本信息详情"
                    android:drawableEnd="@drawable/vector_drawable_edit"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="站点类型" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="储配站"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="站点名称" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="XXXX储配站"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查日期" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="2019-10-12"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查年份" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="2019-10-12"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查结果" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="不合格"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注信息" />

                    <TextView
                        android:id="@+id/info_remark"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rect_bg"
                        android:padding="8dp"
                        android:text="2019-10-12"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/info_operation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorSetting"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="bottom"
                android:text="开始检查"/>
        </android.support.v7.widget.CardView>

    </FrameLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>