<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorText"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorLightGray"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="检查综合意见"
        android:textColor="@color/colorSecondDrayText"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:background="@color/colorSecondDrayText"
        app:layout_constraintTop_toBottomOf="@id/item_type" />

    <EditText
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorGray"
        android:gravity="start"
        android:hint="请填写"
        android:minHeight="80dp"
        android:padding="2dp"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/item_divider" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="保存"
        android:textColor="@color/colorText"
        android:background="@color/colorTextThird"/>
</LinearLayout>
