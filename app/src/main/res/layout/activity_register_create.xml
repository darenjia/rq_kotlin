<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/with_bg_top_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorText"
                            android:paddingBottom="4dp">

                            <TextView
                                android:id="@+id/base_info_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_type_0"
                                android:padding="10dp"
                                android:text="案件基本信息"
                                android:textColor="@color/colorText" />


                            <TextView
                                android:id="@+id/base_info_from_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_title"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorText"
                                android:padding="8dp"
                                android:text="案件来源" />

                            <EditText
                                android:id="@+id/base_info_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_title"
                                android:layout_alignTop="@id/base_info_from_title"
                                android:layout_alignBottom="@id/base_info_from_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_from_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入案件来源"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/base_info_di_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_from_title"
                                android:layout_alignEnd="@id/base_info_from_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"

                                android:padding="8dp"
                                android:text="第" />

                            <EditText
                                android:id="@+id/base_info_di"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_from_title"
                                android:layout_alignTop="@id/base_info_di_title"
                                android:layout_alignBottom="@id/base_info_di_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_di_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入案件第"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/base_info_zi_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_di_title"
                                android:layout_alignEnd="@id/base_info_from_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"

                                android:padding="8dp"
                                android:text="字" />

                            <EditText
                                android:id="@+id/base_info_zi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_from_title"
                                android:layout_alignTop="@id/base_info_zi_title"
                                android:layout_alignBottom="@id/base_info_zi_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_zi_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入案件字"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/base_info_hao_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_zi_title"
                                android:layout_alignEnd="@id/base_info_from_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"

                                android:padding="8dp"
                                android:text="号" />

                            <EditText
                                android:id="@+id/base_info_hao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_from_title"
                                android:layout_alignTop="@id/base_info_hao_title"
                                android:layout_alignBottom="@id/base_info_hao_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_hao_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入案件号"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/base_info_time_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_hao_title"
                                android:layout_alignEnd="@id/base_info_from_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="案发时间" />

                            <TextView
                                android:id="@+id/base_info_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_hao_title"
                                android:layout_alignTop="@id/base_info_time_title"
                                android:layout_alignBottom="@id/base_info_time_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_time_title"
                                android:background="@drawable/edit_text_bg"
                                android:gravity="center_vertical"
                                android:hint="请选择案发时间"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/base_info_address_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_time_title"
                                android:layout_alignEnd="@id/base_info_from_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"

                                android:padding="8dp"
                                android:text="案发地点" />

                            <EditText
                                android:id="@+id/base_info_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/base_info_time_title"
                                android:layout_alignTop="@id/base_info_address_title"
                                android:layout_alignBottom="@id/base_info_address_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_address_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入案发地点"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/base_info_detail_title"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:layout_below="@id/base_info_address_title"
                                android:layout_alignEnd="@id/base_info_from_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center_horizontal"
                                android:padding="8dp"
                                android:text="案情简介" />

                            <EditText
                                android:id="@+id/base_info_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="80dp"
                                android:layout_below="@id/base_info_address_title"
                                android:layout_alignTop="@id/base_info_detail_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/base_info_detail_title"
                                android:background="@drawable/edit_text_bg"
                                android:gravity="start"
                                android:hint="请输入案情简单介绍"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorText"
                            android:paddingBottom="4dp">

                            <TextView
                                android:id="@+id/litigant_info_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
