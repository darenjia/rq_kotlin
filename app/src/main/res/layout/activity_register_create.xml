                                android:layout_height="wrap_content"
                                android:layout_below="@id/informer_info_address_title"
                                android:layout_alignTop="@id/informer_info_tel_title"
                                android:layout_alignBottom="@id/informer_info_tel_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/informer_info_tel_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入举报人联系方式"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorText"
                            android:paddingBottom="4dp">

                            <TextView
                                android:id="@+id/undertaker_info_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_type_3"
                                android:padding="10dp"
                                android:text="承办人基本信息"
                                android:textColor="@color/colorText" />


                            <TextView
                                android:id="@+id/undertaker_info_name_title"
                                android:layout_width="wrap_content"
