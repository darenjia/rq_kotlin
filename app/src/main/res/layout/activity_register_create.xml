                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/undertaker_info_time_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/undertaker_info_name_title"
                                android:layout_alignEnd="@id/undertaker_info_name_title"
