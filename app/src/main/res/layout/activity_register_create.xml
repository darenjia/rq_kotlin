                                android:text="联系地址" />

                            <EditText
                                android:id="@+id/informer_info_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/informer_info_name_title"
                                android:layout_alignTop="@id/informer_info_address_title"
                                android:layout_alignBottom="@id/informer_info_address_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/informer_info_address_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入举报人联系地址"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/informer_info_tel_title"
                                android:layout_width="wrap_content"
