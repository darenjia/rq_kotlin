                                android:padding="10dp"
                                android:text="当事人基本信息"
                                android:textColor="@color/colorText" />


                            <TextView
                                android:id="@+id/litigant_info_name_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/litigant_info_title"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorText"
                                android:padding="8dp"
                                android:text="人员姓名" />

                            <EditText
                                android:id="@+id/litigant_info_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/litigant_info_title"
                                android:layout_alignTop="@id/litigant_info_name_title"
                                android:layout_alignBottom="@id/litigant_info_name_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/litigant_info_name_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入当事人姓名"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/litigant_info_address_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/litigant_info_name_title"
                                android:layout_alignEnd="@id/litigant_info_name_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="联系地址" />

                            <EditText
                                android:id="@+id/litigant_info_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/litigant_info_name_title"
                                android:layout_alignTop="@id/litigant_info_address_title"
                                android:layout_alignBottom="@id/litigant_info_address_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/litigant_info_address_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入当事人联系地址"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/litigant_info_tel_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/litigant_info_address_title"
                                android:layout_alignEnd="@id/litigant_info_name_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="联系方式" />

                            <EditText
                                android:id="@+id/litigant_info_tel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/litigant_info_address_title"
                                android:layout_alignTop="@id/litigant_info_tel_title"
                                android:layout_alignBottom="@id/litigant_info_tel_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/litigant_info_tel_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入当事人联系方式"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorText"
                            android:paddingBottom="4dp">

                            <TextView
                                android:id="@+id/informer_info_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_type_2"
                                android:padding="10dp"
                                android:text="举报人基本信息"
                                android:textColor="@color/colorText" />


                            <TextView
                                android:id="@+id/informer_info_name_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/informer_info_title"
                                android:layout_marginTop="2dp"
                                android:background="@color/colorText"
                                android:padding="8dp"
                                android:text="人员姓名" />

                            <EditText
                                android:id="@+id/informer_info_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/informer_info_title"
                                android:layout_alignTop="@id/informer_info_name_title"
                                android:layout_alignBottom="@id/informer_info_name_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/informer_info_name_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入举报人姓名"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/colorSecondDrayText"
                                android:textSize="@dimen/normal_font_size" />

                            <TextView
                                android:id="@+id/informer_info_address_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/informer_info_name_title"
                                android:layout_alignEnd="@id/informer_info_name_title"
                                android:layout_alignParentStart="true"
                                android:background="@color/colorText"
