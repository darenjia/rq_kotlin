                            <EditText
                                android:id="@+id/undertaker_info_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/undertaker_info_title"
                                android:layout_alignTop="@id/undertaker_info_name_title"
                                android:layout_alignBottom="@id/undertaker_info_name_title"
                                android:layout_margin="1dp"
                                android:layout_toEndOf="@id/undertaker_info_name_title"
                                android:background="@drawable/edit_text_bg"
                                android:hint="请输入承办人姓名"
                                android:paddingStart="10dp"
