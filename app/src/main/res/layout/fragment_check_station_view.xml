<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDivider"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <ImageView
                android:id="@+id/station_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/vector_drawable_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="站点名称"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorDivider">

                <ImageView
                    android:id="@+id/station_search"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorText"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:src="@drawable/vector_drawable_search"
                    android:tint="@color/colorSecondDrayText" />

                <EditText
                    android:id="@+id/station_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorText" />

                <ImageView
                    android:id="@+id/station_search_close"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorText"
                    android:padding="4dp"
                    android:scaleType="center"
                    android:src="@drawable/vector_drawable_search_close"
                    android:tint="@color/colorSecondDrayText" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/station_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>