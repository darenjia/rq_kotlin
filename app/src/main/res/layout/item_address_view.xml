<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorText"
    android:layout_marginBottom="1dp"
    android:padding="2dp">

    <TextView
        android:id="@+id/road_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/code"
        android:padding="4dp"
        android:text="新华路"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/road_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/road_name"
        android:layout_toStartOf="@id/code"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:text="新华街道2018号"
        android:textColor="@color/colorSecondDrayText"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:src="@drawable/vector_drawable_code" />
</RelativeLayout>