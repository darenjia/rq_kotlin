<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/colorText"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/station_search"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/vector_drawable_search" />


    <EditText
        android:id="@+id/station_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorText"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textColor="@color/colorSecondDrayText" />

    <ImageView
        android:id="@+id/station_search_close"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:background="@color/colorText"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/vector_drawable_close"
        android:tint="@color/colorSecondDrayText" />
</LinearLayout>
