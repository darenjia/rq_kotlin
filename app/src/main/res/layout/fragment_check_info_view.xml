<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGray">

            <ImageView
                android:id="@+id/info_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/vector_drawable_back"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingBottom="16dp"
                android:text="检查信息"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_type_title"
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站点类型" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="储配站"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_name_title"
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="站点名称" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="XXXX储配站"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查日期" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/vector_drawable_date"
                android:padding="8dp"
                android:text="2019-10-12"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_year_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查年份" />

            <include layout="@layout/vertical_divider" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/info_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                app:ms_padding_bottom="8dp"
                app:ms_padding_left="8dp"
                app:ms_padding_right="8dp"
                app:ms_padding_top="8dp"
                app:ms_popup_padding_bottom="8dp"
                app:ms_text_gravity="start"
                app:ms_popup_padding_left="8dp"
                app:ms_popup_padding_right="8dp"
                app:ms_popup_padding_top="8dp"
                app:ms_text_color="@color/colorSecondDrayText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/colorText"
            android:orientation="horizontal">

            <TextView
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查人员" />

            <include layout="@layout/vertical_divider" />

            <TextView
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/info_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/colorSetting"
        android:text="确定"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_16" />
</android.support.v7.widget.CardView>