<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorGray"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/district_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="宝山区" />

        <TextView
            android:id="@+id/number_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="15" />

        <TextView
            android:id="@+id/number_type1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="2" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/number_type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="1" />

            <com.github.zagum.expandicon.ExpandIconView
                android:id="@+id/expand_icon"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|end"
                app:eiv_animationDuration="300"
                app:eiv_color="@color/colorDivider"
                app:eiv_padding="8dp"
                app:eiv_roundedCorners="true"
                app:eiv_switchColor="false" />
        </FrameLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>