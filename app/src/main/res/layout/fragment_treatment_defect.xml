<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorText"
                android:gravity="center"
                android:padding="16dp"
                android:text="隐患信息"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <include layout="@layout/horizontal_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分派时间" />

                <include layout="@layout/vertical_divider" />

                <TextView
                    android:id="@+id/info_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="不合格"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事件类型" />

                <include layout="@layout/vertical_divider" />

                <TextView
                    android:id="@+id/info_accident_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="不合格"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处置要求" />

                <include layout="@layout/vertical_divider" />

                <TextView
                    android:id="@+id/info_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="不合格"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="客户名称" />

                <include layout="@layout/vertical_divider" />

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="XXXX储配站"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户地址" />

                <include layout="@layout/vertical_divider" />

                <TextView
                    android:id="@+id/info_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="2019-10-12"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorText"
                android:gravity="center"
                android:padding="16dp"
                android:text="处置信息"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <include layout="@layout/horizontal_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="处置时间" />

                <include layout="@layout/vertical_divider" />

                <TextView
                    android:id="@+id/record_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="2020-10-01"
                    android:drawableEnd="@drawable/vector_drawable_date"
                    android:textColor="@color/colorSecondDrayText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="反馈描述" />

                <include layout="@layout/vertical_divider" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/record_des"
                    style="@style/SpinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_text_gravity="start"
                    app:ms_padding_left="8dp"
                    app:ms_popup_padding_left="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="处置结果" />

                <include layout="@layout/vertical_divider" />

                <RadioGroup
                    android:id="@+id/check_result_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/check_result_radio_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="无异常"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                    <RadioButton
                        android:id="@+id/check_result_radio_failure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="有异常"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/record_des_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/colorText"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="反馈描述" />

                <include layout="@layout/horizontal_divider" />

                <EditText
                    android:id="@+id/record_remark"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:background="@color/colorGray"
                    android:gravity="start"
                    android:hint="@string/record_type2"
                    android:padding="4dp"
                    android:textColor="@color/colorSecondDrayText" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/file_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorProject"
                    android:padding="10dp"
                    android:text="处置照片(1~3张)"
                    android:textColor="@color/colorText" />

                <TextView
                    android:id="@+id/file_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_white_bg"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="1"
                    android:textColor="@color/colorSecondDrayText" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/file_info"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/file_title"
                    android:layout_marginTop="1dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</android.support.v7.widget.CardView>