<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorText">

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="上海市住房和城乡建设管理委员会"
            android:textSize="@dimen/appbar_font_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="责令整改通知书"
            android:textSize="@dimen/title_font_size" />

        <TextView
            android:id="@+id/info_zi"
            style="@style/RecordFragmentInfoEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start" />


        <TextView
            android:id="@+id/name"
            style="@style/ChooseFragmentInfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="被检单位:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_des"
            style="@style/ChooseFragmentInfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="经查，你（单位）于" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:orientation="vertical"
            android:paddingStart="40dp">

            <CheckBox
                android:id="@+id/info_condition1"
                style="@style/ChooseFragmentInfoTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="立即改正上述行为。" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/info_condition2"
                    style="@style/ChooseFragmentInfoTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="于" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/ChooseFragmentInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="具体要求如下：" />

        <TextView
            android:id="@+id/info_content"
            style="@style/RecordFragmentInfoEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:minHeight="60dp" />

        <TextView
            style="@style/ChooseFragmentInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="你（单位）整改完毕后，请及时与本机关联系。" />
    </LinearLayout>
</ScrollView>
