<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorText"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/check_divider"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/check_time"
                android:layout_alignBottom="@id/check_time"
                android:padding="6dp"
                android:src="@drawable/vector_drawable_link2"
                android:tint="@color/colorMint" />

            <TextView
                android:id="@+id/check_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/check_divider"
                android:padding="8dp"
                android:text="浦东-惠南镇"
                android:textColor="@color/colorSetting"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/vector_drawable_date"
                android:drawablePadding="4dp"
                android:drawableTint="@color/colorSetting"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="2020-01-25"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/check_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="上海百斯特储配站"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/check_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_name"
            android:layout_marginBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="查看详情"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/check_operate"
            android:background="@color/colorGray">

            <Button
                android:id="@+id/check_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="@color/colorText"
                android:text="查看详情"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/check_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/colorText"
                android:text="复查记录"
                android:textColor="@color/colorSecondDrayText"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
