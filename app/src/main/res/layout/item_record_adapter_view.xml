<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorText"
    app:cardUseCompatPadding="true">

    <View
        android:id="@+id/check_divider"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorBasil" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/check_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="2020-01-25"
            android:textColor="@color/colorSecondDrayText"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/check_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_time"
            android:padding="8dp"
            android:layout_marginTop="1dp"            android:text="上海百斯特储配站"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/check_time"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/check_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_name"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:text="查看详情"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/check_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@id/check_time"
            android:padding="8dp"
            android:text="查看详情"
            android:textColor="@color/color_type_0"
            android:textSize="18sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
