<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorText"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorGray"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorText"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="基本信息详情"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/info_edit"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/vector_drawable_edit" />
                </FrameLayout>

                <include layout="@layout/horizontal_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="站点类型" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="储配站"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="站点名称" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="XXXX储配站"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查日期" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="2019-10-12"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查年份" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="2019-10-12"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查人员" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查结果" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="不合格"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorText"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整改要求" />

                    <include layout="@layout/vertical_divider" />

                    <TextView
                        android:id="@+id/info_result_need_correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="不需要"
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorText"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ChooseFragmentInfoTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注信息" />

                    <include layout="@layout/horizontal_divider" />

                    <TextView
                        android:id="@+id/info_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorLightGray"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/colorSecondDrayText"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </ScrollView>
</android.support.v7.widget.CardView>